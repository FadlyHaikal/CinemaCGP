<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    tools:context=".MovieDetailActivity"
    android:scrollbarTrackHorizontal="@android:drawable/arrow_down_float"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <TextView
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:textAlignment="center"/>

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:isIndicator="true"
            android:padding="10dp" />

        <TextView
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:id="@+id/genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:text="Genre: Action, Adventure" />

        <TextView
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:text="Duration: 120 minutes" />

        <TextView
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:id="@+id/stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:text="Actors: Tom Cruise, Simon Pegg, Ving Rhames" />

        <TextView
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:id="@+id/directors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:text="Director: Christopher McQuarrie" />

        <TextView
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:id="@+id/release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:text="Release Date: July 27, 2018" />

        <Button
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="7dp"
            android:id="@+id/btnReserveAlpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Book on CGP Alpha Cinema" />

        <Button
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnReserveBeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Book on CGP Beta Cinema" />

    </LinearLayout>

</ScrollView>
